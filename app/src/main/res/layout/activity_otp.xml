<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP"

    android:orientation="vertical"
    >




    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/letter"
            android:layout_centerInParent="true"

            />


    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent you an access code via SMS for"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#090000"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile number Varification"
            android:layout_gravity="center"

            android:textColor="#090000"
            android:textSize="16dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Code Here"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>



        <EditText
            android:id="@+id/edit_text_otp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="6"/>


        <Button
            android:id="@+id/otp_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="continue"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/buttonround"
            android:textColor="#ffff"/>



        <TextView
            android:id="@+id/buttonResendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:layout_gravity="center"
            android:textColor="#090000"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:elevation="20dp"/>



        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>



    </LinearLayout>











</LinearLayout>

    </ScrollView>