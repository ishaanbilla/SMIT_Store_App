<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">


    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:hintTextColor="#3F6AE6"



            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/registration_edit_text_name"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:paddingLeft="10dp"
                android:drawableStart="@drawable/user"
                android:inputType="text"

                android:drawablePadding="20dp"


                />




        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            app:hintTextColor="#3F6AE6"
            android:layout_marginTop="10dp"



            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/registration_edit_text_phone"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:paddingLeft="10dp"
                android:drawableStart="@drawable/phone"
                android:inputType="number"
                android:maxLength="10"
                android:drawablePadding="20dp"

                />




        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:hintTextColor="#3F6AE6"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/registration_edit_text_password"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:paddingLeft="10dp"
                android:drawableStart="@drawable/lock"
                android:inputType="textPassword"

                android:drawablePadding="20dp"

                />




        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            app:hintTextColor="#3F6AE6"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/registration_edit_text_confirm_password"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:paddingLeft="10dp"
                android:drawableStart="@drawable/lock"
                android:inputType="textPassword"

                android:drawablePadding="20dp"

                />




        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="30dp"/>


        <Button
            android:id="@+id/registration_button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonround"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="Sign Up"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:layout_gravity="center"

            android:layout_marginTop="30sp"
            android:textSize="17sp"
            android:textColor="#FFA000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:id="@+id/registration_button_signin"
            android:layout_marginRight="30sp"
            android:background="@drawable/buttonround"
            android:text="Sign in"
            android:textColor="#fff"
            android:textSize="17sp" />


    </LinearLayout>




</RelativeLayout>